.row.single-related-task.related-task-create-form.active
    .task-name
        input(
            type='text',
            tg-autofocus,
            [placeholder]="'TASK.PLACEHOLDER_SUBJECT' | translate"
        )
    .task-settings
        a.save-task(
            (click)="save()",
            [title]="'COMMON.SAVE' | translate"
        )
            tg-svg(svg-icon="icon-save")

    tg-related-task-status.status([task]='newTask', [notAutoSave]='true')
        a.task-status([title]="'TASK.TITLE_SELECT_STATUS' | translate")
            span.task-status-bind
            tg-svg(svg-icon="icon-arrow-down")

    tg-related-task-assigned-to-inline-edition.assigned-to([task]='newTask', [notAutoSave]='true')
        .task-assignedto([title]="'COMMON.FIELDS.ASSIGNED_TO' | translate")
            figure.avatar
            tg-svg(svg-icon="icon-arrow-down")

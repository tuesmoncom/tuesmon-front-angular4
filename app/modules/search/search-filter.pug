ul.search-filter(*ngIf="results")
    li.epics
        a(
            [class.active]="activeTab === 'epics'",
            (click)="activeTabChange.emit('epics')",
            [title]="'SEARCH.FILTER_EPICS' | translate"
        )
            tg-svg(svg-icon="icon-epics")
            span.num {{results.get('epics').size}}
            span.name(translate="SEARCH.FILTER_EPICS")


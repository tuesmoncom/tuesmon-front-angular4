form
    h2.title(translate="LIGHTBOX.CREATE_EDIT_US.TITLE")
    fieldset
        input(
            type="text",
            name="subject",
            [placeholder]="'COMMON.FIELDS.SUBJECT' | translate",
            data-required="true",
            data-maxlength="500",
            required,
        )

    fieldset.ticket-estimation
        tg-us-estimation-for-lightbox(
            [roles]="project?.get('roles')",
            [points]="project?.get('points')"
        )

    fieldset
        select(name="status")
            option(*ngFor="let status of project?.get('us_statuses')",
                   [value]="status.get('id')") {{status.get('name')}}


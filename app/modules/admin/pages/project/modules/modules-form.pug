form.module-container(*ngIf="project", [formGroup]="null")
    .module.module-epics([class.active]="project.get('is_epics_activated')")
        .module-icon
            tg-svg(svg-icon="icon-epics")
        .module-name(translate="ADMIN.MODULES.EPICS")
        .module-desc
            p(translate="ADMIN.MODULES.EPICS_DESCRIPTION")
        .module-activation.module-direct-active
            div.check
                input.activate-input(
                    id="functionality-epics",
                    name="functionality-epics",
                    type="checkbox",
                    [checked]="project.get('is_epics_activated')"
                )
                div
                span.check-text.check-yes(translate="COMMON.YES")
                span.check-text.check-no(translate="COMMON.NO")

    .module.module-scrum([class.active]="project.get('is_backlog_activated')")
        .module-icon
            tg-svg(svg-icon="icon-scrum")
        .module-name(translate="ADMIN.MODULES.BACKLOG")
        .module-desc
            p(translate="ADMIN.MODULES.BACKLOG_DESCRIPTION")
            .module-desc-options(*ngIf="project.get('is_backlog_activated')")
                fieldset
                    label(for="total-sprints", translate='ADMIN.MODULES.NUMBER_SPRINTS')
                    input(
                        id="total-sprints",
                        name="total-sprints",
                        type="number",
                        min="0",
                        [placeholder]="'ADMIN.MODULES.NUMBER_SPRINTS_HELP' | translate",
                        [value]="project.get('total_milestones')",
                        data-type="digits"
                    )

                fieldset
                    label(for="total-story-points", translate="ADMIN.MODULES.NUMBER_US_POINTS")
                    input(
                        id="total-story-points",
                        name="total-story-points",
                        type="number",
                        min="0",
                        [placeholder]="'ADMIN.MODULES.NUMBER_US_POINTS_HELP' | translate",
                        [value]="project.get('total_story_points')",
                        data-type="digits"
                     )
                .options
                    a.save(href="")
                        tg-svg(svg-icon="icon-save")
        .module-activation.module-direct-active
            div.check
                input.activate-input(
                    id="functionality-backlog",
                    name="functionality-backlog",
                    type="checkbox",
                    [checked]="project.get('is_backlog_activated')"
                )
                div
                span.check-text.check-yes(translate="COMMON.YES")
                span.check-text.check-no(translate="COMMON.NO")

    .module.module-kanban([class.active]="project.get('is_kanban_activated')")
        .module-icon
            tg-svg(svg-icon="icon-kanban")
        .module-name(translate="ADMIN.MODULES.KANBAN")
        .module-desc(translate="ADMIN.MODULES.KANBAN_DESCRIPTION")
        .module-activation.module-direct-active
            div.check
                input.activate-input(
                    id="functionality-kanban",
                    name="functionality-kanban",
                    type="checkbox",
                    [checked]="project.get('is_kanban_activated')"
                )
                div
                span.check-text.check-yes(translate="COMMON.YES")
                span.check-text.check-no(translate="COMMON.NO")

    .module.module-issues([class.active]="project.get('is_issues_activated')")
        .module-icon
            tg-svg(svg-icon="icon-issues")
        .module-name(translate="ADMIN.MODULES.ISSUES")
        .module-desc(translate="ADMIN.MODULES.ISSUES_DESCRIPTION")
        .module-activation.module-direct-active
            div.check
                input.activate-input(
                    id="functionality-issues",
                    name="functionality-issues",
                    type="checkbox",
                    [checked]="project.get('is_issues_activated')"
                )
                div
                span.check-text.check-yes(translate="COMMON.YES")
                span.check-text.check-no(translate="COMMON.NO")

    .module.module-wiki([class.active]="project.get('is_wiki_activated')")
        .module-icon
            tg-svg(svg-icon="icon-wiki")
        .module-name(translate="ADMIN.MODULES.WIKI")
        .module-desc(translate="ADMIN.MODULES.WIKI_DESCRIPTION")
        .module-activation.module-direct-active
            div.check
                input.activate-input(
                    id="functionality-wiki",
                    name="functionality-wiki",
                    type="checkbox",
                    [checked]="project.get('is_wiki_activated')"
                )
                div
                span.check-text.check-yes(translate="COMMON.YES")
                span.check-text.check-no(translate="COMMON.NO")

    .module.module-videoconference([class.active]="project.get('videoconferences')")
        .module-icon
            tg-svg(svg-icon="icon-bubble-empty")
        .module-name(translate="ADMIN.MODULES.MEETUP")
        .module-desc
            p(translate="ADMIN.MODULES.MEETUP_DESCRIPTION")
            div.videoconference-attributes(*ngIf="project.get('videoconferences')")
                select(id="videoconference-type", name="videoconference-type")
                    option(
                        value="",
                        translate="ADMIN.MODULES.SELECT_VIDEOCONFERENCE"
                    )
                    option(
                        value="appear-in",
                        translate="ADMIN.MODULES.APPEARIN_CHAT_ROOM"
                    )
                    option(
                        value="jitsi",
                        translate="ADMIN.MODULES.JITSI_CHAT_ROOM"
                    )
                    option(
                        value="talky",
                        translate="ADMIN.MODULES.TALKY_CHAT_ROOM"
                    )
                    option(
                        value="custom",
                        translate="ADMIN.MODULES.CUSTOM_CHAT_ROOM"
                    )
                fieldset(*ngIf="project.get('videoconferences') && project.get('videoconferences') != 'custom'")
                    input(
                        id="videoconference-prefix",
                        name="videoconference-prefix",
                        type="text",
                        [value]="project.get('videoconferences_extra_data')",
                        data-maxlength="250",
                        [placeholder]="'ADMIN.MODULES.SALT_CHAT_ROOM' | translate"
                    )
                fieldset(*ngIf="project.get('videoconferences') == 'custom'")
                    input(
                        id="videoconference-url",
                        name="videoconference-url",
                        type="url",
                        [value]="project.get('videoconferences_extra_data')",
                        data-maxlength="250",
                        [placeholder]="'ADMIN.MODULES.URL_CHAT_ROOM' | translate",
                        data-type="url",
                        data-required="true"
                    )
                fieldset.options
                    a.save(href="", *ngIf="project.get('videoconferences')")
                        tg-svg(svg-icon="icon-save")

        .module-activation
            div.check
                input.activate-input(
                    id="functionality-video",
                    name="functionality-video",
                    type="checkbox",
                    [checked]="project.get('videoconferences')"
                )
                div
                span.check-text.check-yes(translate="COMMON.YES")
                span.check-text.check-no(translate="COMMON.NO")
